            android:id="@+id/b5"
            android:textSize="82dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:background="#fff8e1" />

        <Button
            android:id="@+id/b6"
            android:textSize="82dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:background="#fff8e1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:weightSum="3"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/b7"
            android:textSize="82dp"
            android:layout_width="match_parent"
